{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "es6",
      "ESNext.AsyncIterable"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}